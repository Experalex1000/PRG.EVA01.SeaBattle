                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationLetter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationNumber)
            </td>
